	<script>

		const fetchjobs = "http://129.173.67.217:1337/fetchjobs"

		var data;

		var arr=new Set();

		async function getjobs(){
			const response = await fetch(fetchjobs);
			data = await response.json()

			console.log(data)


		for(var i=0;i<data.length;i++){
			arr.add(data[i].jobName)
		}

		console.log(arr);

			var select = document.getElementById("jobs");
			arr.forEach(async function (arrayItem) {
			    let jobname = arrayItem

			    var el = document.createElement("option");
			    el.text = jobname;
			    el.value = jobname;

			    select.add(el);

   			});
		}

		getjobs()

		function myFunction(){
			var x = document.getElementById("jobs");
			localStorage.setItem("jobnamekey", x.value);

			const jobName = document.getElementById("jobName").value;

			console.log()

			if(jobName === ""){
				return true;
			}

			if(arr.has(jobName)){
				return true;
			}else{
				alert("Job " + jobName + " does not exist");
				return false;
			}

		}
	</script>
